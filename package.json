{
  "name": "clean-node-api",
  "version": "1.1.0",
  "description": "Node.js Rest API using TDD, Clean Architecture and SOLID Principles",
  "main": "index.js",
  "scripts": {
    "dev": "npm run build && npm run debug",
    "watch": "nodemon --watch src --ext ts --exec \"npm run dev\" --signal SIGTERM",
    "debug": "node --inspect=0.0.0.0:9222 --nolazy dist/main/server.js",
    "start": "node dist/main/server.js",
    "build": "rimraf dist && tsc",
    "up": "docker compose up --watch",
    "down": "docker compose down",
    "test": "jest --passWithNoTests --silent --noStackTrace --no-coverage --runInBand",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:staged": "npm test -- --findRelatedTests",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:ci": "npm test -- --coverage",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": "22.x"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@shelf/jest-mongodb": "5.1.0",
    "@types/bcrypt": "5.0.2",
    "@types/express": "5.0.1",
    "@types/jest": "29.5.14",
    "@types/mongodb": "4.0.6",
    "@types/node": "22.15.3",
    "@types/supertest": "6.0.3",
    "@types/validator": "13.15.0",
    "git-commit-msg-linter": "5.0.8",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "lint-staged": "15.5.1",
    "rimraf": "6.0.1",
    "supertest": "7.1.0",
    "ts-jest": "29.3.2",
    "typescript": "5.8.3"
  },
  "dependencies": {
    "bcrypt": "5.1.1",
    "express": "5.1.0",
    "fast-glob": "3.3.3",
    "mongodb": "6.16.0",
    "nodemon": "3.1.10",
    "validator": "13.15.0"
  }
}
